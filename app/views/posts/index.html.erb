<section>
    <%= render "shared/user_card", user: @user %>
    
    <% if @user.posts.empty? %>
        <p>There is no post yet.</p>
    <% end %>

    <% @user.posts.includes(:comments).each do |post| %>
        <%= render "shared/post_card", post: post %>
        <%= render "shared/comment_box", comments: post.recent_comments %>
    <% end %>

    <button class="link-btn" type="button">Pagination</button>

</section>