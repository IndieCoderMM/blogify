<section>
    <%= render "shared/header", current_user: @current_user %>
    <div class="tool-bar">
    <% if user_signed_in? %>
        <%= link_to "+ New Post", new_user_post_path(@current_user), class: "new-post-btn" %>
    <% else %>
        <p>Join Blogify to create new post!</p>
    <% end %>
    </div>
    <div class="users-container">
    <% @users.each do |user| %>
        <%= render "shared/user_card", user: user %>
    <% end %>
    </div>
</section>
